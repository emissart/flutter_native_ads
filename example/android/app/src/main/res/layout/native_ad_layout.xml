<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flutter_native_ad_unified_native_ad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/flutter_native_ad_icon"
            android:layout_width="@dimen/ad_image_size"
            android:layout_height="@dimen/ad_image_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/flutter_native_ad_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/flutter_native_ad_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/flutter_native_ad_icon"
            tools:text="Headline Headline Headline Headline Headline Headline Headline" />

        <TextView
            android:id="@+id/flutter_native_ad_body"
            style="@android:style/TextAppearance.Material.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@id/flutter_native_ad_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flutter_native_ad_headline"
            tools:ignore="RtlHardcoded"
            tools:text="@tools:sample/lorem/random" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_headline_body_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="flutter_native_ad_icon,flutter_native_ad_body,flutter_native_ad_headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/flutter_native_ad_attribution"
            style="@android:style/TextAppearance.Material.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@id/flutter_native_ad_call_to_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/flutter_native_ad_call_to_action"
            tools:text="AD" />

        <TextView
            android:id="@+id/flutter_native_ad_call_to_action"
            style="@android:style/TextAppearance.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/ad_internal_padding"
            android:background="@drawable/rounded_corner"
            android:ellipsize="middle"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/flutter_native_ad_attribution"
            app:layout_constraintTop_toBottomOf="@id/barrier_headline_body_icon"
            tools:text="INSTALL" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.gms.ads.formats.UnifiedNativeAdView>


